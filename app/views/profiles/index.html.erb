
<div class="banner-container">
  <div class="banner-content">
    <h2><strong> Welcome to Rent A Mate</strong></h2>
    <h2>Connect, Share, Enjoy.</h2>
    <p><strong>Find the perfect companion for any moment.</strong></p>
    <a href="/path/to/create/profile" class="btn btn-primary">Find Your Mate </a>
  </div>
</div>




<div class="container">
  <div class="row">
    <% @profiles.each do |profile| %>
      <div class="col-md-3 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="profile-image-container">
            <% if profile.user.avatar.attached? %>
              <img src="<%= url_for(profile.user.avatar) %>" class="profile-image" alt="Profile picture of <%= profile.name %>">
            <% else %>
              <img src="<%= profile.profile_picture_url %>" class="profile-image" alt="Profile picture of <%= profile.name %>">
            <% end %>
          </div>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= profile.name %></h5>
            <p class="card-age"><%= profile.age %> years old</p>
            <p class="card-text"><%= profile.bio %></p>
            <p class="card-price"><strong><%= profile.price %> </strong> $/hour</p>
            <%= link_to "View Profile", profile_path(profile), class: "btn-view-profile mt-auto" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
