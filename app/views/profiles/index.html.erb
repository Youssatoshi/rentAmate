<div class="container">
  <div class="row">
    <% @profiles.each do |profile| %>
      <div class="col-md-3 mb-4">
        <div class="profile-cards">
          <img class="card-img-top" src="<%= profile.profile_picture_url %>" alt="profile-pic" style="width: 100%; height: auto;">
          <div class="card-body">
            <h5 class="card-title"><%= profile.name %></h5>
            <p class="card-text"><%= profile.bio %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
